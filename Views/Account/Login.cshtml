@using web_quanao.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    @if(ViewBag.RegisterSuccess != null){
        <div class="alert alert-success">@ViewBag.RegisterSuccess</div>
    }
    @if(ViewBag.Error != null){
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Đăng nhập tài khoản.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row mb-2">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="offset-md-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="offset-md-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Đăng ký tài khoản mới", "Register")
                    </p>
                }
            </section>
        </div>
    </div>
</main>
@section Scripts { @Scripts.Render("~/bundles/jqueryval") }