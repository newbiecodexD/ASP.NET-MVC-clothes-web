@model web_quanao.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    @if(TempData["RegisterSuccess"] != null){
        <div class="alert alert-success">Tạo tài khoản thành công! Bạn đã được đăng nhập.</div>
        <script>
            setTimeout(function(){
                alert('Bạn đã đăng ký thành công');
                window.location='@Url.Action("Login","Account")';
            }, 400);
        </script>
    }

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Tạo tài khoản mới.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row mb-3">
            @Html.LabelFor(m => m.Email, "Email", new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận", new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Đăng ký" class="btn btn-primary" />
            </div>
        </div>
        <p class="mt-3 text-muted">
            Mật khẩu phải tối thiểu 6 ký tự và chứa: chữ hoa, chữ thường, chữ số và ký tự đặc biệt.
        </p>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
