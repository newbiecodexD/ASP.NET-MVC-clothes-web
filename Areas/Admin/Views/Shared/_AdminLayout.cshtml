<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bảng quản trị - @ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/admin.css")" />

    @* Vị trí này để các trang con có thể chèn CSS riêng *@
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="admin-header">
        <h4 class="m-0">Bảng quản trị</h4>
        <div>
            <span>Chào, <strong>Admin</strong>!</span>
            <a href="/Account/Logout" class="btn btn-outline-light btn-sm ms-3">Đăng xuất</a>
        </div>
    </header>

    <div class="d-flex">
        <aside class="admin-sidebar">
            <nav class="nav flex-column">
                <a class="nav-link" href="/Admin/Home"><i class="bi bi-house-door-fill me-2"></i>Trang chủ</a>
                <a class="nav-link" href="/Admin/Product"><i class="bi bi-box-seam-fill me-2"></i>Quản lý sản phẩm</a>
                <a class="nav-link" href="/Admin/Users"><i class="bi bi-people-fill me-2"></i>Quản lý người dùng</a>
            </nav>
        </aside>

        <main class="admin-main">
            @RenderBody()
        </main>
    </div>

    <script>
        // Script đơn giản để làm nổi bật link đang active
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.admin-sidebar .nav-link');
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>
