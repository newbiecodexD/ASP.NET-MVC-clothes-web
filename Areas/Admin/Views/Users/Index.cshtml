@model IEnumerable<(string Email,string Password)>
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h4 mb-3">Quản lý người dùng </h1>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Mật khẩu </th>
            <th style="width:220px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Email</td>
            <td>@u.Password</td>
            <td>
                <form method="post" action="@Url.Action("ResetPassword")" class="d-inline" style="width:200px;">
                    <input type="hidden" name="email" value="@u.Email" />
                    <input type="text" name="newPassword" class="form-control form-control-sm mb-1" placeholder="Mật khẩu mới" />
                    <button class="btn btn-sm btn-warning" type="submit">??t l?i</button>
                </form>
                <form method="post" action="@Url.Action("Delete")" class="d-inline" onsubmit="return confirm('Xóa user này?');">
                    <input type="hidden" name="email" value="@u.Email" />
                    <button class="btn btn-sm btn-danger">Xóa</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
