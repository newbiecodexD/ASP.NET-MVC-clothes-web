@model web_quanao.Areas.Admin.Controllers.ProductController.ProductVm
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">Sửa sản phẩm</h1>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ProductID)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                <label class="form-label">Tên sản phẩm</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giá</label>
                @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", type = "number", step = "1000" })
                @Html.ValidationMessageFor(m => m.Cost, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Số lượng</label>
                @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
        }
    </div>
</div>
